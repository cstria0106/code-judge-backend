generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  ADMIN
}

model User {
  id                   String  @id
  password             Bytes
  salt                 Bytes
  name                 String
  shouldChangePassword Boolean

  role UserRole @default(STUDENT)

  submits       Submit[]
  uploadedFiles File[]
}

model Submit {
  id String @id @default(uuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  problem   Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)
  problemId BigInt

  language String
  code     String @db.LongText

  status    Json
  debugText String @default("") @db.MediumText

  time   Float?
  memory Int?

  createdAt DateTime @default(now())
}

model Problem {
  id BigInt @id @default(autoincrement())

  name        String
  description String @db.MediumText

  timeLimit   Int @default(3000) // 3s
  memoryLimit Int @default(128000000) // 128MB

  templates Json
  artifacts Json

  startTime DateTime?
  endTime   DateTime?

  submits Submit[]
}

model File {
  id         String @id
  filename   String
  size       Int
  uploader   User   @relation(fields: [uploaderId], references: [id])
  uploaderId String
}
